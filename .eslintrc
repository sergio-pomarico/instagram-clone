{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es6",
        "singleQuote": true,
        "printWidth": 100
      }
    ],
    "no-use-before-define": 0,
    "jsx-a11y/accessible-emoji": 0
  },
  "plugins": [
    "prettier"
  ]
}